{
    "version": 2,
    "builds": [
        {
            "src": "client/package.json",
            "use": "@vercel/next"
        },
        {
            "src": "server/src/index.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "server/src/index.ts"
        },
        {
            "src": "/_next/(.*)",
            "dest": "client/_next/$1"
        },
        {
            "src": "/(.*)",
            "dest": "client/$1"
        }
    ]
}